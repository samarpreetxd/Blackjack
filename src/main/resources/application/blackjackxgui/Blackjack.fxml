<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="565.0" prefWidth="746.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.blackjackxgui.BlackjackController">

    <!-- Dealer Area -->
    <top>
        <VBox alignment="CENTER" prefHeight="250.0" prefWidth="187.0" spacing="10" style="-fx-border-color: black; -fx-border-width: 2;" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 14;" text="Dealer's Hand:" />
            <Label fx:id="dealerHandLabel" style="-fx-font-size: 12;" text="Cards will appear here." />
        </VBox>
    </top>

    <!-- Player Areas -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <!-- Player 1 Area -->
            <VBox fx:id="player1Area" alignment="CENTER" spacing="10" style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10;">
                <Label style="-fx-font-size: 14;" text="Player 1's Hand:" />
                <Label fx:id="player1HandLabel" style="-fx-font-size: 12;" text="Cards will appear here." />
            </VBox>

            <!-- Player 2 Area -->
            <VBox fx:id="player2Area" alignment="CENTER" spacing="10" style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10;">
                <Label style="-fx-font-size: 14;" text="Player 2's Hand:" />
                <Label fx:id="player2HandLabel" style="-fx-font-size: 12;" text="Cards will appear here." />
            </VBox>

            <!-- Player 3 Area -->
            <VBox fx:id="player3Area" alignment="CENTER" spacing="10" style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 10;">
                <Label style="-fx-font-size: 14;" text="Player 3's Hand:" />
                <Label fx:id="player3HandLabel" style="-fx-font-size: 12;" text="Cards will appear here." />
            </VBox>
        </HBox>
    </bottom>

    <!-- Button Area -->
    <center>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <Button fx:id="hitButton" text="HIT" style="-fx-font-size: 14;" />
            <Button fx:id="standButton" text="STAND" style="-fx-font-size: 14;" />
        </HBox>
    </center>

</BorderPane>
